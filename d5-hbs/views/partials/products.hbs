<div class=''>
    <h1 class="text-center text-bg-dark p-3">Nuestros Productos</h1>

    <table class="table table-light m-auto mt-5" style="width: 70%;" >
        <thead>
            <tr>
                <th scope="col"> Product </th>
                <th scope="col"> Price </th>
                <th scope="col"> Image </th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td> {{ this.title }} </td>
                    <td> {{ this.price }} </td>
                    <td><img src="{{this.thumbnail}}" width="100px" alt="{{ this.title }}"> </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <form class="p-3" action="/" method="get">
        <button class="btn btn-dark">Return</button>
    </form>

</div>